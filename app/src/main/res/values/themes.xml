<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.AppLiviaVercosaEstetica" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/textColorEscuro</item>
        <item name="android:textColorPrimary">@color/textColorEscuro</item> <!-- cor do titulo-->
        <item name="android:navigationBarColor">@color/primary</item> <!-- cor da barra inferior -->

    </style>

    <style name="Theme.AppLiviaVercosaEstetica.NoActionBar" parent="Theme.AppCompat.Light">

        <item name="android:fontFamily">casual</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/textColorEscuro</item>
        <item name="android:textColorPrimary">@color/textColorEscuro</item> <!-- cor do titulo-->
        <item name="android:navigationBarColor">@color/background</item> <!-- cor da barra inferior -->

    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/branco</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="elevation">25dp</item>
        <item name="fontFamily">casual</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>